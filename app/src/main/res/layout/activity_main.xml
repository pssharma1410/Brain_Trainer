<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="85dp"
        android:layout_height="64dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="27dp"
        android:background="#673AB7"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:background="#F44336"
        android:gravity="center"
        android:textColor="#F4F0F0"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="34dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="262dp"
        android:layout_height="126dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="337dp"
        android:background="#3F51B5"
        android:backgroundTintMode="add"
        android:onClick="startgame"
        android:text="GO"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:backgroundTint="#03A9F4" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="352dp"
        android:layout_height="221dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="#F9FAFA"
        android:visibility="invisible"
        app:columnCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:rowCount="2">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#2196F3"
            android:gravity="center"
            android:onClick="textViewClick"
            android:tag="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#020000"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#FFEB3B"
            android:gravity="center"
            android:onClick="textViewClick"
            android:tag="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#020000"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#FF9800"
            android:gravity="center"
            android:onClick="textViewClick"
            android:tag="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#020000"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#ABCBCF"
            android:gravity="center"
            android:onClick="textViewClick"
            android:tag="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#020000"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="332dp"
        android:onClick="startgame"
        android:text="PLAY AGAIN"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="403dp"
        android:layout_height="242dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#E3D2D2"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#020000"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="212dp"
        android:layout_height="124dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="212dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#7A7474"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:text="Rules : \n i)You will be given some addition question and you have to solve them. \n ii)Each time you click a answer next qestion will be displayed. \n iii)You have 30 seconds for each play and you have to score maximum correct anwers."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>